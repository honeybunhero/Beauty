                android:text="Body Lotion"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:focusable="true" />

            <LinearLayout
                android:id="@+id/ll_body_lotion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
