            <Button
                android:id="@+id/btn_body_wash_soap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/buttons_1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="OnBodyWashClick"
                android:text="Body Wash / Soap"
                android:textColor="@color/text"
                android:textSize="20sp"
                app:layout_gravity="fill" />

            <LinearLayout
                android:id="@+id/ll_bodywash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnAddBodyWash"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/buttons_2"
                    android:clickable="false"
                    android:focusable="true"
                    android:text="@string/addBtn"
                    android:textColor="#F8BBD0" />

                <Button
                    android:id="@+id/btnViewBodyWash"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@color/buttons_2"
                    android:clickable="false"
                    android:focusable="true"
                    android:text="@string/viewBtn"
                    android:textColor="#F8BBD0" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_body_lotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/buttons_1"
                android:clickable="true"
